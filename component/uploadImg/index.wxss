/* component/uploadImg/index.wxss */
.uploadImg{
    display: flex;
    flex-wrap: wrap;
}

.uploadItem{
    width: 200rpx;
    height: 200rpx;
    padding: 10rpx;
}

.itemBox{
    position: relative;
    width: 100%;
    height: 100%;
    border: 1px solid #DEDEDE;
}
.itemBox image{
    width: 100%;
    height: 100%;
}
.itemBox .close{
    position: absolute;
    top: -10rpx;
    right: -10rpx;
    width: 36rpx;
    height: 36rpx;
    border-radius: 50%;
    background: rgba(0,0,0,0.4);
}
.itemBox .close:after,.itemBox .close:before{
    position: absolute;
    top: 8rpx;
    left: 17rpx;
    content: '';
    width: 2px;
    height: 20rpx;
    background: white;
}
.itemBox .close:before{
    transform: rotate(45deg);
}
.itemBox .close:after{
    transform: rotate(-45deg);
}

.checkImg{
    display: flex;
    flex-flow: column;
    align-items: center;
    justify-content: center;
    color: #DEDEDE;
    font-size: 24rpx;
}
.checkImg .icon{
    position: relative;
    width: 70rpx;
    height: 70rpx;
    margin-bottom: 10rpx;
}
.checkImg .icon:after,.checkImg .icon:before{
    position: absolute;
    content: '';
    background: #DEDEDE;
}
.checkImg .icon:after{
    top: 0;
    left: 50%;
    margin-left: -1px;
    width: 2px;
    height: 100%;
}
.checkImg .icon:before{
    top: 50%;
    left: 0;
    margin-top: -1px;
    width: 100%;
    height: 2px;
}
