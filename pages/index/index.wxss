page{
    background: aliceblue;
}
.wrap{
    padding: 30rpx 30rpx 10rpx;
}
.item{
    background: white;
    padding: 20rpx;
    border-radius: 6rpx;
    margin-bottom: 20rpx;
    line-height: 2;
}
.item .tle{
    font-size: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
.item .time{
    font-size: 24rpx;
    color: #aaaaaa;
}
.item .info{
    font-size: 24rpx;
    color: #777;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.item image{
    display: block;
    width: 100%;
    height: 300rpx;
    border-radius: 6rpx;
    margin-top: 10rpx;
}
